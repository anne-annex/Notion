    <script>
        const weekdays = ["domingo", "lunes", "martes", "mi√©rcoles", "jueves", "viernes", "s√°bado"];
        const months = ["enero", "febrero", "marzo", "abril", "mayo", "junio", "julio", "agosto", "septiembre", "octubre", "noviembre", "diciembre"];

        const today = new Date();
        const hrs = today.getHours();

        const dayName = weekdays[today.getDay()];
        const dayNumber = today.getDate();
        const monthName = months[today.getMonth()];
        const year = today.getFullYear();

        const formattedDate = `${capitalize(dayName)}, ${dayNumber} de ${monthName} de ${year}`;

        let greet = "";

        if (hrs < 12)
            greet = "‚òÄÔ∏è Buenos d√≠as, Srta Anne";
        else if (hrs >= 12 && hrs <= 17)
            greet = "üå§Ô∏è Buenas tardes, Srta Anne";
        else
            greet = "üåô Buenas noches, Srta Anne";

        document.getElementById("lbl").innerHTML = 
            `${greet}<div id="date">${formattedDate}</div>`;

        function capitalize(str) {
            return str.charAt(0).toUpperCase() + str.slice(1);
        }
    </script>
